{
  "multipart": [
    {
      "apply": {
        "model": "ocm:block/mithrilfence_post"
      }
    },
    {
      "when": {
        "north": "true"
      },
      "apply": {
        "model": "ocm:block/mithrilfence",
        "uvlock": true
      }
    },
    {
      "when": {
        "south": "true"
      },
      "apply": {
        "model": "ocm:block/mithrilfence",
        "y": 180,
        "uvlock": true
      }
    },
    {
      "when": {
        "west": "true"
      },
      "apply": {
        "model": "ocm:block/mithrilfence",
        "y": 270,
        "uvlock": true
      }
    },
    {
      "when": {
        "east": "true"
      },
      "apply": {
        "model": "ocm:block/mithrilfence",
        "y": 90,
        "uvlock": true
      }
    }
  ]
}